{
	"$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["**/app/src/**/*.js", "!**/app/src/dependencies"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"includes": ["**/app/src/**/*.js", "!**/app/src/dependencies"]
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"includes": ["**/app/src/**/*.js", "!**/app/src/dependencies"],
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
