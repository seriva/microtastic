// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.195.0/containers/javascript-node
{
	"name": "Node.js",
	"build": {
		"dockerfile": "Dockerfile",
		// Update 'VARIANT' to pick a Node version: 22, 20, 18.
		// Append -bookworm, -bullseye, or -buster to pin to an OS version.
		// Use -bookworm variants for latest Debian (recommended).
		"args": { "VARIANT": "22-bookworm" }
	},
	"customizations": {
		"vscode": {
			"extensions": ["biomejs.biome", "tobermory.es6-string-html"],
			"settings": {
				"editor.codeActionsOnSave": {
					"quickfix.biome": "explicit",
					"source.organizeImports.biome": "explicit"
				},
				"[javascript]": {
					"editor.defaultFormatter": "biomejs.biome"
				}
			}
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [8181],

	// Use 'portsAttributes' to set default properties for specific forwarded ports. More info: https://code.visualstudio.com/docs/remote/devcontainerjson-reference.
	"portsAttributes": {
		"8081": {
			"label": "devserver",
			"onAutoForward": "notify"
		}
	},

	// Use 'otherPortsAttributes' to configure any ports that aren't configured using 'portsAttributes'.
	// "otherPortsAttributes": {
	// 		"onAutoForward": "silent"
	// },

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "npm install",

	// Use non-root user for better security. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "node"
}
